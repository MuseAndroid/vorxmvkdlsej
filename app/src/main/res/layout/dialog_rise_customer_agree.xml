<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/backgroundColor"
                android:gravity="center_vertical"
                android:text="고객정보활용동의선택안내"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvUserSearchInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="center"
            android:background="#fff"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@+id/info_title"
            android:background="#fff"
            android:paddingTop="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUserSearchInfo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/ivSMS"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_cusin_01"
                android:translationZ="100dp" />

            <Button
                android:id="@+id/btnSendSMS"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/marketing_button_shape"
                android:gravity="left|center"
                android:text="" />

            <TextView
                android:id="@+id/tvSmsContent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_above="@+id/btnRiseSignWeb"
                android:layout_centerVertical="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:text="홍길동
(01012345678)님의 핸드폰으로
고객정보활용동의
안내 문자를 발송 합니다."
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:translationZ="100dp" />

            <ImageView
                android:id="@+id/ivSIGN"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="175dp"
                android:src="@drawable/ic_cusin_02"
                android:translationZ="100dp" />

            <Button
                android:id="@+id/btnRiseSignWeb"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/btnSendSMS"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/marketing_button_shape"
                android:gravity="left|center"
                android:text="" />

            <TextView
                android:id="@+id/tvSignContent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/btnSendSMS"
                android:layout_centerVertical="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="150dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:translationZ="100dp" />
        </FrameLayout>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/cancel_button_shape"
            android:text="취소"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>